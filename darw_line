import cv2 
import numpy 
RED = (0, 0, 255)
YELLOW = (0, 255, 255)
p0, p1, p2 = (10, 10), (300, 90), (400, 10)
img = img = numpy.zeros((100, 500, 3), numpy.uint8)
cv2.line(img, p0, p1, RED, 2)
cv2.line(img, p1, p2, YELLOW, 5)
cv2.imshow('RGB', img)
gray_img = numpy.zeros((100, 500), numpy.uint8)
cv2.line(gray_img, p0, p1, 100, 2)
cv2.line(gray_img, p1, p2, 255,5)
cv2.imshow('Gray', gray_img)
cv2.waitKey(0)
cv2.destroyAllWindows()
